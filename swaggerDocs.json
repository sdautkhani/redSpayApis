{
    "swagger": "2.0",
    "info": {
        "description": "Swagger Documentation for RedSpy Api's",
        "version": "1.0.0",
        "title": "RedSpy Api's"
    },
    "schemes": [
        "http"
    ],
    "host": "localhost:3000",
    "basePath": "/",
    "paths": {
        "/login/signin": {
            "post": {
                "summary": "Allow users to login",
                "description": "Allow users to login with emailId and password,response with the jwt token",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Login object",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "emailId": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "emailId": {
                                    "type": "string"
                                },
                                "token": {
                                    "type": "string"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/login/register": {
            "post": {
                "summary": "Allow New user to signup",
                "description": "Allow New user to signup",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Signup object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/UserDetails"
                        }
                        
                    }
                ],
                
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/SuccessResponse"
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/login/getUserById/{emailId}": {
            "get": {
                "summary": "Fetch user Details by emailId",
                "description": "Fetch user Details by emailId",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "emailId",
                        "in": "path",
                        "description": "emailId to Fetch user Details by emailId",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/UserDetails"
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/admin/signin": {
            "post": {
                "summary": "Allow admin users to login",
                "description": "Allow admin users to login with email id and password",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Login object",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "userName": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "token": {
                                    "type": "string"
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/admin/getUserList/{name}/{status}/{pg}": {
            "get": {
                "summary": "Fetch user Details by emailId/name,status and page number",
                "description": "Fetch user Details by emailId/name,status and page number.name parameter will be null to serch by status",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "name to Fetch user Details by name or emailid",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "status",
                        "in": "path",
                        "description": "status to Fetch user Details by status",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "pg",
                        "in": "path",
                        "description": "pg to Fetch user Details with pagination ",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/UserDetails"
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/admin/statusCount": {
            "get": {
                "summary": "Fetch user count per status",
                "description": "Fetch user count for each status",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ], 
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Appoved": {
                                    "type": "string"
                                },
                                "Rejected": {
                                    "type": "string"
                                },
                                "Pending": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        },
        "/admin/updateUserStatus": {
            "post": {
                "summary": "Allow admin to update user's Id proof status",
                "description": "Allow admin to update user's Id proof status",
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User status object",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "_id": {
                                    "type": "string"
                                },
                                "statusDetails": {
                                    "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                },
                "idProof1Status":{
                    "type":"string"
                },
                "idProof2Status": {
                    "type": "string"
                },
                "idProof1Reason":{
                    "type":"string"
                },
                "idProof2Reason":{
                    "type":"string"
                }
            }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/SuccessResponse"
                        }
                    },
                    "500": {
                        "description": "Invalid status value",
                        "schema": {
                            "$ref": "#/definitions/InvalidResponse"
                        }
                    }
                }
            }
        }
    },
   
